  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
  <div class = "nav-top">
    <a href="/"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
    <p id= "no-padding_two">REGISTER</p>
    <div class="actions">
      <%= f.submit "Next", class: "action" %>
    </div>
  </div>

 <div class = "registration-picture d-flex p-2">
  <div class = "user-icon">
    <i class="fas fa-user"></i>
  </div>
  <p class = "pl-2 pic">Upload picture</p>
</div>
<div class = "inputs">
  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Full name", required: :true %>
  </div>

  <div class=" border-top">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", required: :true %>
  </div>

  <div class=" border-top">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", required: :true %>
  </div>
</div>
<% end %>